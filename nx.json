{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "test": {
      "dependsOn": [],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/build"],
      "cache": true
    }
  },
  "release": {
    "projects": ["*", "!compute"],
    "projectsRelationship": "independent",
    "version": {
      "conventionalCommits": true
    },
    "conventionalCommits": {
      "types": {
        "fix": false,
        "feat": false,
        "patch": {
          "semverBump": "patch",
          "changelog": {
            "title": "Patch Changes"
          }
        },
        "minor": {
          "semverBump": "minor",
          "changelog": {
            "title": "Minor Changes"
          }
        },
        "major": {
          "semverBump": "major",
          "changelog": {
            "title": "Major Changes"
          }
        }
      }
    },
    "git": {
      "commit": true,
      "tag": true
    },
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github",
        "file": "{projectRoot}/CHANGELOG.md"
      }
    }
  },

  "defaultBase": "main"
}
